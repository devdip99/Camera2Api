<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextureView
            android:id="@+id/textureView_mainActivity_textureview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/imageView_mainActivity_cameraButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/camera_icon"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_mainActivity_videorecord"
            app:layout_constraintTop_toTopOf="@+id/imageView_mainActivity_videorecord"
            app:layout_constraintEnd_toStartOf="@+id/imageView_mainActivity_videorecord"/>

    <ImageView
            android:id="@+id/imageView_mainActivity_videorecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_button"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/imageView_mainActivity_timelapse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/timelapse_icon"
            android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/imageView_mainActivity_videorecord"
    app:layout_constraintBottom_toBottomOf="@+id/imageView_mainActivity_videorecord"
    app:layout_constraintStart_toEndOf="@+id/imageView_mainActivity_videorecord"/>
</android.support.constraint.ConstraintLayout>